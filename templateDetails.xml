<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.0" type="template" client="site">
	<name>astra</name>
	<version>1.0</version>
	<creationDate>10/30/2012</creationDate>
	<author>Asika</author>
	<authorEmail>asika@asikart.com</authorEmail>
	<copyright>Copyright (C) 2012 Asikart.com. All rights reserved.</copyright>
	<description>TPL_ASTRA_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>debug</position>
		
		<position>banner-1</position>
		<position>banner-2</position>
		<position>sub-banner-1</position>
		<position>sub-banner-2</position>
		
		<position>top-breadcrumbs</position>
		<position>bottom-breadcrumbs</position>
		
		<position>top-container-1</position>
		<position>top-container-2</position>
		<position>top-container-3</position>
		<position>top-container-4</position>
		
		<position>top-inner-1</position>
		<position>top-inner-2</position>
		<position>top-inner-3</position>
		<position>top-inner-4</position>
		
		<position>bottom-inner-1</position>
		<position>bottom-inner-2</position>
		<position>bottom-inner-3</position>
		<position>bottom-inner-4</position>
		
		<position>bottom-container-1</position>
		<position>bottom-container-2</position>
		<position>bottom-container-3</position>
		<position>bottom-container-4</position>
		
		<position>left</position>
		<position>left-inner</position>
		<position>right</position>
		<position>right-inner</position>
		
		<position>footer-1</position>
		<position>footer-2</position>
		<position>footer-3</position>
		<position>footer-4</position>
		
		<position>footer</position>
	</positions>

	<config>
		<fields name="params">
			<fieldset name="advanced">
				
				<field
					name="sample"
					type="text"
					label="TPL_ASTRA_"
					description="TPL_ASTRA__DESC"
					class=""
				/>
				
				<field
					name="menutype"
					type="menu"
					label="TPL_ASTRA_MENUTYPE"
					description="TPL_ASTRA_MENUTYPE_DESC"
				/>
				
				<field
					name="menucolor"
					type="radio"
					label="TPL_ASTRA_MENUCOLOR"
					description="TPL_ASTRA_MENUCOLOR_DESC"
					class="btn-group"
					default="black"
				>
					<option value="black">TPL_ASTRA_MENUCOLOR_OPT_BLACK</option>
					<option value="white">TPL_ASTRA_MENUCOLOR_OPT_WHITE</option>
				</field>
				
				<field
					name="menufixtop"
					type="radio"
					label="TPL_ASTRA_MENUFIXTOP"
					description="TPL_ASTRA_MENUFIXTOP_DESC"
					class="btn-group"
					default="1"
				>
					<option value="1">TPL_ASTRA_MENUFIXTOP_OPT_TRUE</option>
					<option value="0">TPL_ASTRA_MENUFIXTOP_OPT_FALSE</option>
				</field>
				
				
				<field name="templateColor" class="" type="color" default="#08C"
					label="TPL_ASTRA_COLOR_LABEL"
					description="TPL_ASTRA_COLOR_DESC" />

				<field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
					label="TPL_ASTRA_BACKGROUND_COLOR_LABEL"
					description="TPL_ASTRA_BACKGROUND_COLOR_DESC" />

				<field name="logoFile" class="" type="media" default=""
					label="TPL_ASTRA_LOGO_LABEL"
					description="TPL_ASTRA_LOGO_DESC" />
					
				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group"
					default="1"
					label="TPL_ASTRA_FONT_LABEL"
					description="TPL_ASTRA_FONT_DESC"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_ASTRA_FONT_NAME_LABEL"
					description="TPL_ASTRA_FONT_NAME_DESC" />

				<field name="fluidContainer"
					type="radio"
					class="btn-group"
					default="0"
					label="TPL_ASTRA_FLUID_LABEL"
					description="TPL_ASTRA_FLUID_DESC"
				>
					<option value="0">TPL_ASTRA_STATIC</option>
					<option value="1">TPL_ASTRA_FLUID</option>
				</field>
			</fieldset>
			
			<fieledset name="basic">
				
			</fieledset>
		</fields>
	</config>
</extension>
